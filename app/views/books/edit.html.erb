

<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <%= @book.errors.count %>error
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>
<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
<div>

 <h4>Title</h4>
 <%= f.text_field :title %>
</div>

<div>
 <h4>Body</h4>
 <%= f.text_area :body %>
</div>

<div><%= f.submit 'Update Book'%></div>
<div>
   <%= link_to "Show", book_path(@book.id) %>
   <i>|</i>
   <%= link_to "Back", books_path %>
</div>


<% end %>

